        <RadioButton x:Name="rdoSub" Content="-" HorizontalAlignment="Left" Margin="231,165,0,0" VerticalAlignment="Top" Width="50"/>
        <RadioButton x:Name="rdoMul" Content="*" HorizontalAlignment="Left" Margin="231,185,0,0" VerticalAlignment="Top"/>
