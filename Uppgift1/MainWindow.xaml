<Window x:Class="Uppgift1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift1"
        mc:Ignorable="d"
        Title="Knappen" Height="450" Width="800">
    <Grid>
        <Button x:Name="BtnMessage" Content="Klicka på mig" Click="BtnMessage_Click" HorizontalAlignment="Left" Margin="311,174,0,0" VerticalAlignment="Top" Width="143" Height="60" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="22" RenderTransformOrigin="0.5,0.5" Background="#FF9DD48C">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.081"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
